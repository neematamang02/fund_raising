# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Encryption Key (for sensitive data like bank accounts)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_change_in_production

# AWS S3 Configuration
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_ENVIRONMENT=sandbox

# Frontend URLs
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting (optional - only needed if you want to enable in development)
# ENABLE_RATE_LIMITING=true  # Uncomment to enable rate limiting in development

# Email Configuration (Gmail App Password)
# To enable email sending:
# 1. Go to https://myaccount.google.com/apppasswords
# 2. Generate an App Password for "Mail"
# 3. Fill in the values below:
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_character_app_password
